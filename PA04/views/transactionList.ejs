
<h1> Transaction List for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is your list of things to do! </p>
      </p>
    </div>
  </div>
      <ul class="list-group">
        <% items.forEach(item => { %>
          <div class="row">
            <div class="col">
              <% if (item.completed) { %>
                <a 
                  href="/todo/uncomplete/<%= item._id %>">
                  <i class="bi bi-check-circle-fill"></i>
              </a>
              <% } else {%>
                <a 
                  href="/todo/complete/<%= item._id %>">
                  <i class="bi bi-check-circle"></i>
              </a>
              <%} %>
            </div>
            <div class="col">
              <a href="/todo/remove/<%=item._id %>">
                <i class="bi bi-trash"></i>
              </a>
            </div>
            <div class="col">
              <span class="mx-5">
                <%= item.item %>
              </span>
            </div>
            <div class="col">
              <span class="badge rounded-pill bg-danger">
                <%= item.priority?item.priority:5 %> 
              </span>
            </div>
            <div class="col">
              <a 
                  href="/todo/edit/<%=item._id %>">
                <i class="bi bi-pencil-square"></i>
              </a>
            </div>
                  
            </li>
            <br>
          </div>
        <% }) %>

        <form method="post" action="transactions">
            new item: <input type="text" name="item">
            <br>
            priority: <select name="priority">
              <option>1 </option>
              <option>2 </option>
              <option>3 </option>
              <option>4 </option>
              <option>5 </option>
            </select>
            <br>
            <input type="submit" value="store">
        </form>
      </ul>
    </div>
</div>
