
<h1> Transaction List for <%= user.username %> :</h1>
<table class="table">
  <tr>
    <td>
      <a class="btn btn-sm btn-primary" href="/transactions/groupByCategory">
        Group by Category
      </a>
    </td>
    <td>
      <a class="btn btn-sm btn-primary" href="/transactions/sortByCategory">
        Sort by Category
      </a>
    </td>
    <td>
      <a class="btn btn-sm btn-primary" href="/transactions/sortByAmount">
        Sort by Amount
      </a>
    </td>
    <td>
      <a class="btn btn-sm btn-primary" href="/transactions/sortByDescription">
        Sort by Description
      </a>
    </td>
    <td>
      <a class="btn btn-sm btn-primary" href="/transactions/sortByDate">
        Sort by Date
      </a>
    </td>
  </tr>
</table>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th scope="col">Amount</th>
      <th scope="col">Category</th>
      <th scope="col">Date</th>
      <th scope="col">Delete</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
    <tr>
      <td>
        <span class="mx-5">
          <%= item.description %>
        </span>
      </td>
      <td>
        <span class="mx-2">
          <%= item.amount %>
        </span>
      </td>
      <td>
        <span class="mx-5">
          <%= item.category %>
        </span>
      </td>
      <td>
        <span class="mx-5">
          <%= item.date %>
        </span>
      </td>
      <td>
        <a href="/transactions/remove/<%=item._id %>">
          <i class="bi bi-trash"></i>
        </a>
      </td>
      <td>
        <a href="/transactions/edit/<%=item._id %>">
            <i class="bi bi-pencil-square"></i>
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<h2>Add a New Transaction:</h2><br>
<form method="post" action="transactions">
  <input type="text" name="desc" placeholder="description"><br>
  <input type="text" name="amount" placeholder="amount"><br>
  <input type="text" name="cat" placeholder="category"><br>
  <input type="text" name="date" placeholder="mm/dd/yyyy"><br>
  <input type="submit" value="store">
</form>
